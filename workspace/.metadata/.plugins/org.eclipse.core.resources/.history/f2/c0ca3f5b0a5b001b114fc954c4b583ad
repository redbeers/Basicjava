package store;

import java.util.Vector;

public class Guest {
	String name;
	int money;
	int miles;
	
	Vector<Guest> people = new Vector<>();//백터 사람관리
	
	public Guest(String name, int money) {//초기화
		this.name = name;
		this.money = money;
		miles = money/10;
	}
	public void storage(Guest g){//백터에 저장
		people.add(g);
	}
	public void output(Guest g){//백터 저장 출력
		
		for(int i=0; i<people.size(); i++){
			Guest result = (Guest)people.get(i);
			System.out.println(result.name+result.money+result.miles);
		}
	}
	
}
